<Window x:Class="HarryManual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarryManual"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="820">
    <Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="Главная" Margin="8,-2,-11,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*"></ColumnDefinition>
                        <ColumnDefinition Width="235*"></ColumnDefinition>
                        <ColumnDefinition Width="97*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Menu Margin="0,4,0,-4">
                        <Button Content="Персонажи" Height="26" Width="116"/>
                        <Button Content="Статьи" Height="26" Width="116"/>
                        <Button Content="Фильмы" Height="26" Width="116"/>
                        <Button Content="Цитаты" Height="26" Width="116"/>
                        <Button Content="Все" Height="26" Width="116"/>
                        <Button x:Name="AddCategory" Content="Добавить +" Height="26" Width="116" Click="AddCategory_Click_1"/>
                    </Menu>
                    <Grid Background="#FFF0F0F0" Grid.Column="2" Height="auto" Width="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="88"></RowDefinition>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="MainSearchString"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="180" BorderThickness="0,0,0,0" Height="18" Grid.ColumnSpan="2" Margin="7,0,0,0"/>
                        <GroupBox Header="Персонажи" Grid.Row="1" Grid.ColumnSpan="2">
                            <StackPanel  x:Name="Persons">
                                <CheckBox Content="CheckBox1" HorizontalAlignment="Left" Margin="9,7,0,0" Grid.Row="1" VerticalAlignment="Top" Height="16" Width="71"/>
                                <CheckBox Content="CheckBox2" HorizontalAlignment="Left" Margin="9,9,0,0" Grid.Row="2" VerticalAlignment="Top" Height="14" Width="71"/>
                                <CheckBox Content="CheckBox3" HorizontalAlignment="Left" Margin="9,9,0,0" Grid.Row="2" VerticalAlignment="Top" Height="14" Width="71"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Серии фильмов" Grid.Row="2" Grid.ColumnSpan="2">
                            <StackPanel  x:Name="Films">
                                <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="9,7,0,0" Grid.Row="1" VerticalAlignment="Top" Height="16" Width="71"/>
                                <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="9,9,0,0" Grid.Row="2" VerticalAlignment="Top" Height="14" Width="71"/>
                                <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="9,9,0,0" Grid.Row="2" VerticalAlignment="Top" Height="14" Width="71"/>
                            </StackPanel>
                        </GroupBox>


                        <GroupBox Header="Цитаты" Grid.Row="3" Grid.ColumnSpan="2">
                            <TextBox x:Name="Quote"  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="180" BorderThickness="0,0,0,0" Height="63"/>
                        </GroupBox>


                        <GroupBox Header="Избранное" Grid.Row="4" Grid.ColumnSpan="2">
                            <StackPanel  x:Name="Favorite">
                                <RadioButton x:Name="RadioFavAll" Content="Все" />
                                <RadioButton x:Name="RadioFavShow" Content="Отобразить избранное" />
                                <RadioButton x:Name="RadioFavHide" Content="Скрыть избранное" />
                            </StackPanel>
                        </GroupBox>

                        <StackPanel Grid.Row="5" Grid.ColumnSpan="2">
                            <Button Click="GetFilterValues" Content="Отфильтровать" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="174"/>
                            <Button Content="Сбросить" HorizontalAlignment="Center" VerticalAlignment="Center" Width="174"/>
                        </StackPanel>

                    </Grid>

                    <ListView Grid.Column="1" x:Name="ResultStack">
                    </ListView>


                </Grid>
            </TabItem>

        </TabControl>
        <Button Content="Button" HorizontalAlignment="Left" Margin="869,147,0,0" VerticalAlignment="Top" Width="0"/>
    </Grid>
</Window>

